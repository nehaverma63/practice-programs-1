#include <iostream>
using namespace std;

class NaturalSum {
public:
    NaturalSum(int n = 10) {
        int sum = calculateSum(n);
        cout << "Sum of the first " << n << " natural numbers is: " << sum << endl;
    }

private:
    int calculateSum(int n) {
        return n * (n + 1) / 2;
    }
};

int main() {
    NaturalSum sum1;
    NaturalSum sum2(5);
    return 0;
}
